<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Development configuration - allows cleartext for localhost and development servers -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Localhost and local development servers -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="true">192.168.0.1</domain>
        
        <!-- Development servers -->
        <domain includeSubdomains="true">uat.ado-dad.com</domain>
        <domain includeSubdomains="true">dev.ado-dad.com</domain>
        <domain includeSubdomains="true">staging.ado-dad.com</domain>
        
        <!-- Local network development -->
        <domain includeSubdomains="true">192.168.0.0/16</domain>
        <domain includeSubdomains="true">10.0.0.0/8</domain>
    </domain-config>
    
    <!-- Production configuration - only HTTPS allowed -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">ado-dad.com</domain>
        <domain includeSubdomains="true">www.ado-dad.com</domain>
    </domain-config>
    
    <!-- Default configuration - only HTTPS allowed -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
